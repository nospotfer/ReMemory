<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.DescripcioSegment" table="DescripcioSegment">
        <id name="idDescripcioSegment" column="idDescripcioSegment">
            <generator class="native"/>
        </id>
        <property name="descripcio" column="descripcio"/>    
       <many-to-one name="segment" class="model.Segment" fetch="select">
           <column name="idSegment" />   
        </many-to-one>     
    </class>
</hibernate-mapping>