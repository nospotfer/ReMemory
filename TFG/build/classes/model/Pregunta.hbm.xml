<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
    <class name="model.Pregunta" table="Pregunta">
        <id name="idPregunta" column="idPregunta">
            <generator class="native"/>
        </id>
        <property name="pregunta" column="pregunta"/>
        <property name="resposta" column="resposta" />
        
       <many-to-one name="segment" class="model.Segment" fetch="select">
           <column name="idSegment" />   
        </many-to-one>
        
      
    </class>
</hibernate-mapping>

