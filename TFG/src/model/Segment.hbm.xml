<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
    <class name="model.Segment" table="Segment">
        <id name="idSegment" column="idSegment">
            <generator class="native"/>
        </id>
        <property name="horaInici" column="horaInici"/>
        <property name="minutInici" column="minutInici" />
        <property name="segonInici" column="segonInici" />
        <property name="horaFinal" column="horaFinal" />
        <property name="minutFinal" column="minutFinal" />
        <property name="segonFinal" column="segonFinal" />
        
       <many-to-one name="dia" class="model.Dia" fetch="select">
           <column name="anymesdia" />   
        </many-to-one>
        
        <set name="preguntes" table="Pregunta" lazy="true" cascade="all">
           <key>
               <column name="idSegment" /> 
           </key>
           <one-to-many class="model.Pregunta" /> 
       </set>
       
       <set name="imatges" table="Imatge" lazy="true" cascade="all">
           <key>
               <column name="idSegment" /> 
           </key>
           <one-to-many class="model.Imatge" /> 
       </set>
       
       <set name="descripcions" table="Descripcio" lazy="true" cascade="all">
           <key>
               <column name="idSegment" /> 
           </key>
           <one-to-many class="model.DescripcioSegment" /> 
       </set>
    </class>
</hibernate-mapping>
